<% unless saved_locations.count == 0 %>
  <div class="saved-locations">
    <p class="location-title">Récement recherché</p>
    <% saved_locations.first(3).each do |saved_location| %>
      <%= link_to request.params.merge(locations: params[:locations].present? ? params[:locations] + ",#{saved_location.insee_code}" : saved_location.insee_code),
          class: "location-result",
          data: { action: 'click->locations#add_location', type: "#{saved_location.class.name.downcase}", 'location-id': saved_location.id} do %>
        <div class="location-logo-name">
          <i class="fa-solid fa-clock-rotate-left location-logo"></i>
          <p class="location-name"><%= saved_location.name %></p>
        </div>
        <p class="location-type">
          <%= humanize_location(saved_location) %>
        </p>
      <% end %>
    <% end %>
  </div>
<% end %>
<% unless locations.count == 0 %>
  <div class="matching-locations">
    <p class="location-title">Communes</p>
    <% locations.first(@number_of_results).each do |location| %>
      <%= link_to request.params.merge(locations: params[:locations].present? ? params[:locations] + ",#{location.insee_code}" : location.insee_code),
          class: "location-result",
          data: { action: 'click->locations#add_location', type: "#{location.class.name.downcase}", 'location-id': location.id} do %>
          <div class="location-logo-name">
            <i class="fa-solid fa-location-dot location-logo"></i>
            <p class="location-name"><%= location.name %></p>
          </div>
        <p class="location-type">
          <%= humanize_location(location) %>
        </p>
      <% end %>
    <% end %>
  </div>
<% end %>
