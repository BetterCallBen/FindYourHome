<div class="researches">
  <% @researches.each do |research| %>
    <div class="research">
      <p><%= research.project if research.project %></p>
      <p><%= research.status if research.status %></p>
      <% if research.rooms %>
        <p><%= research.rooms %> rooms</p>
      <% end %>
      <% if research.bedrooms %>
        <p><%= research.bedrooms %> bedrooms</p>
      <% end %>
      <p><%= 'balcon' if research.balcony %></p>

      <% research.boroughs.each do |borough| %>
        <p><%= borough.name %></p>
      <% end %>

      <% research.cities.each do |city| %>
        <p><%= city.name %></p>
      <% end %>
    </div>
  <% end %>
</div>
