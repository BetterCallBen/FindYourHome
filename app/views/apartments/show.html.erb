<h1><%= @apartment.name %> <small><%= @apartment.address %></small></h1>
<h2>
  <%= pluralize @apartment.reviews.size, "review" %>
</h2>

<div id="reviews">
  <% if @apartment.reviews.blank? %>
    Be the first to leave a review for <%= @apartment.name %>
  <% else %>
    <% @apartment.reviews.each do |review| %>
      <p><%= review.content %></p>
    <% end %>
  <% end %>
</div>

<%= simple_form_for [ @apartment, @review ], remote: true do |f| %>
  <%= f.input :content, as: :text %>
  <%= f.button :submit %>
<% end %>
