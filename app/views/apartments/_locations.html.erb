<% unless locations.nil? %>
  <% locations.first(8).each do |location| %>
    <div data-insee-code="<%= location.insee_code %>" data-action="click->apartments#addLocation" class="location-result">
      <p class="location-name"><%= location.name %></p>
      <p class="location-type">
        <% case location.class.name  %>
        <% when "City" %>
          <%= "Ville" %>
        <% when "Borough"%>
          <%= "Arrondissement" %>
        <% end %>

      </p>

    </div>
  <% end %>
<% end %>
